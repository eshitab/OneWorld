 $(document).ready(function(){
$("input:radio[name=criteria]").click(function() {
            var value = $(this).val();
            if(value == 'donor'){
            	
            	$('#map2').slideToggle('500');
            	$('#map1').slideToggle('500');
            }else{
                if(value == 'recipient'){
                	
                	$('#map1').slideToggle('500');
            	$('#map2').slideToggle('500');
                    }
            }
        });
        });